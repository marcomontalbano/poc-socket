{
  "name": "poc-socket",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
    "postinstall": "yarn build",
    "clean": "rm -rf node_modules/ output/ yarn.lock */*/node_modules */*/output */*/dist */*/tsconfig.tsbuildinfo */*/yarn.lock",
    "build": "tsc --build packages/**/tsconfig.json",
    "ts:check": "tsc --noEmit",
    "test": "jest",
    "dev:server": "yarn workspace @realtime/server start",
    "dev:demo-chat": "yarn workspace @realtime/demo-chat start",
    "dev": "concurrently -c green,yellow,blue,magenta,cyan yarn:dev:*",
    "build:server": "tsc --build tsconfig.build.json",
    "build:demo-chat": "parcel build ./demo/index.html -d ./dist-demo --public-url /poc-socket/",
    "postbuild:demo-chat": "touch ./dist-demo/.nojekyll",
    "serve:server": "node ./dist-server/server.js",
    "serve:demo-chat": "npx serve ./dist-demo -p 1234",
    "serve": "concurrently yarn:serve:*",
    "heroku-postbuild": "yarn build:server"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.27",
    "concurrently": "^6.2.1",
    "jest": "^27.2.1",
    "nodemon": "^2.0.13",
    "parcel-bundler": "^1.12.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "wait-for-expect": "^3.0.2"
  },
  "engines": {
    "node": ">= 14"
  }
}

{
  "name": "poc-socket",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
    "test": "jest",
    "dev:server": "CORS_ORIGIN=http://localhost:1234 npx ts-node server.ts",
    "dev:client": "parcel ./public/index.html -d ./dist-client",
    "dev": "concurrently npm:dev:*",
    "build:server": "tsc",
    "build:client": "yarn parcel build ./public/index.html -d ./dist-client",
    "build": "concurrently npm:build:*",
    "serve:server": "node ./dist-server/server.js",
    "serve:client": "npx serve ./dist-client -p 1234"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "socket.io": "^3.1.0",
    "socket.io-client": "^3.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
